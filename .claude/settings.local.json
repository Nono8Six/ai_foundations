{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(rm:*)",
      "Bash(mkdir:*)",
      "Bash(find:*)",
      "Bash(node:*)",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(supabase db:*)",
      "Bash(supabase gen types:*)",
      "Bash(supabase migration:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "mcp__supabase__*",
      "mcp__context7__*",
      "mcp__supabase-deploya__*",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(sed:*)",
      "Bash(for:*)",
      "Bash(do echo \"Fixing: $file\")",
      "Bash(rg:*)",
      "Bash(done)",
      "Bash(grep:*)",
      "mcp__supabase__execute_sql",
      "mcp__supabase__generate_typescript_types",
      "mcp__supabase-deploya__execute_sql_query",
      "mcp__supabase-deploya__get_table_schema",
      "mcp__supabase-deploya__get_db_schemas",
      "mcp__supabase-deploya__get_tables",
      "Bash(git rm:*)",
      "mcp__supabase-deploya__live_dangerously",
      "mcp__shadcn-ui__list_components",
      "mcp__shadcn-ui__get_component",
      "Bash(dir:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "supabase",
    "context7",
    "supabase-deploya"
  ],
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); project=$(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\"); model=$(echo \"$input\" | jq -r '.model.display_name'); printf \"\\033[36m%s\\033[0m | \\033[32m%s\\033[0m | \\033[33m$(pwd | sed 's|.*/||')\\033[0m\" \"$model\" \"$project\""
  }
}