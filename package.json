{
  "name": "ai-foundations-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "preview": "pnpm --filter frontend preview",
    "test": "cross-env-shell LOG_LEVEL=fatal pnpm exec vitest run --passWithNoTests",
    "test:e2e": "playwright test",
    "start": "pnpm run dev",
    "lint": "eslint . --max-warnings 0",
    "test": "pnpm exec vitest run --passWithNoTests",
    "generate": "pnpm types:gen",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "supabase": "supabase",
    "supabase:status": "supabase status",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:db:pull": "pnpm --filter backend exec supabase db pull",
    "supabase:db:push": "pnpm --filter backend exec supabase db push",
    "supabase:db:reset": "pnpm --filter backend exec supabase db reset",
    "supabase:db:repair": "pnpm --filter backend exec supabase migration repair",
    "supabase:gen:types": "cross-env-shell supabase gen types typescript --project-id $SUPABASE_PROJECT_REF --schema public > apps/frontend/src/types/database.types.ts",
    "validate:env": "node scripts/validate-env.js",
    "supabase:db:diff": "pnpm --filter backend exec supabase db diff",
    "clean:docker": "sh scripts/cleanup.sh",
    "recovery": "sh scripts/recovery.sh",
    "reset:hard": "pnpm clean:docker && pnpm recovery",
    "sync:from-cloud": "sh scripts/sync-supabase.sh --pull"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.1.0",
    "envalid": "^8.0.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "execa": "^8.0.1",
    "globals": "^16.2.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "supabase": "2.30.4"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "pino": "^9.7.0",
    "sonner": "^2.0.5"
  }
}
