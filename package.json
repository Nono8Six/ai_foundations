{
  "name": "ai-foundations-monorepo",
  "private": true,
  "packageManager": "pnpm@10.12.2+sha512.a32540185b964ee30bb4e979e405adc6af59226b438ee4cc19f9e8773667a66d302f5bfee60a39d3cac69e35e4b96e708a71dd002b7e9359c4112a1722ac323f",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "// === DÉVELOPPEMENT BOLT.NEW ===": "",
    "dev": "pnpm --filter frontend dev --host 0.0.0.0 --port 3000",
    "start": "pnpm run dev",
    "prestart": "pnpm install --ignore-scripts",
    "dev:backend:local": "pnpm --filter backend dev",
    "// === RÉCUPÉRATION ===": "",
    "recovery": "sh scripts/recovery.sh",
    "cleanup": "sh scripts/cleanup.sh",
    "// === DÉVELOPPEMENT LOCAL (Docker) ===": "",
    "dev:docker": "docker compose up --build frontend",
    "dev:full": "docker compose --profile backend up --build",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:tools": "docker compose --profile tools up -d",
    "dev:logs": "docker compose logs -f",
    "// === SUPABASE CLOUD ===": "",
    "db:pull": "pnpm --filter backend exec supabase db pull",
    "db:push": "pnpm --filter backend exec supabase db push",
    "db:diff": "pnpm --filter backend exec supabase db diff",
    "db:reset": "pnpm --filter backend exec supabase db reset",
    "db:status": "pnpm --filter backend exec supabase status",
    "// === TYPES ===": "",
    "gen:types": "supabase gen types typescript --project-id oqmllypaarqvabuvbqga --schema public,auth,storage > apps/frontend/src/types/database.types.ts",
    "typecheck": "pnpm exec tsc -b --pretty",
    "// === VALIDATION ===": "",
    "test:connection": "node --env-file=.env scripts/test-supabase-connection.mjs",
    "test:supabase": "pnpm --filter backend test:supabase",
    "test:supabase:full": "pnpm --filter backend test:supabase:full",
    "validate:env": "node --env-file=.env scripts/validate-env.js",
    "health": "curl -f http://localhost:3000 && echo '✅ Frontend OK' || echo '❌ Frontend KO'",
    "health:backend": "curl -f http://localhost:3001/health && echo '✅ Backend OK' || echo '❌ Backend KO'",
    "health:full": "pnpm run health && pnpm run health:backend",
    "lint": "pnpm -r lint",
    "// === BUILD & DEPLOY ===": "",
    "build:packages": "pnpm --filter logger build",
    "build": "pnpm run build:packages && pnpm --filter frontend build",
    "build:backend": "pnpm run build:packages && pnpm --filter backend build",
    "preview": "pnpm --filter frontend preview",
    "// === MAINTENANCE ===": "",
    "clean:docker": "docker system prune -af --volumes",
    "clean:deps": "find . -name node_modules -type d -exec rm -rf {} + 2>/dev/null || true",
    "clean:cache": "pnpm store prune",
    "reset:hard": "pnpm run cleanup && pnpm run recovery",
    "// === SYNCHRONISATION ===": "",
    "sync:from-cloud": "pnpm run db:pull && pnpm run gen:types",
    "sync:to-cloud": "pnpm run db:push",
    "sync:full": "pnpm run db:pull && pnpm run gen:types && pnpm run typecheck",
    "// === INSTALLATION & SETUP ===": "",
    "install:all": "pnpm install",
    "setup": "pnpm run install:all && pnpm run validate:env && pnpm run test:supabase",
    "setup:safe": "node scripts/safe-setup.js"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.18",
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "@eslint/js": "^9.27.0",
    "globals": "^16.2.0",
    "eslint-plugin-react": "^7.37.5",
    "typescript": "^5.8.3",
    "vite": "6.3.5",
    "vite-plugin-checker": "^0.9.3"
  }
}