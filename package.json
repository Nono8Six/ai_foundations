  "scripts": {
    "dev": "pnpm --filter frontend dev",
    "build": "pnpm --filter frontend build",
    "preview": "pnpm --filter frontend preview",
    "start": "pnpm run dev",
    "test": "pnpm --filter frontend test",
    "test:output": "cd apps/frontend && pnpm test --reporter=json --outputFile=test-results.json || (echo \"Tests terminés - Vérifiez le fichier apps/frontend/test-results.json\" && exit 0)",
