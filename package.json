    "globals": "^16.2.0",
    "husky": "^9.1.4",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "supabase": "^2.31.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
