{
  "name": "ai-foundations-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm dev:frontend",
    "dev:frontend": "pnpm --filter frontend dev",
    "start": "pnpm dev:frontend",
    "build": "pnpm --filter frontend build",
    "preview": "pnpm --filter frontend preview",
    "test": "cross-env-shell LOG_LEVEL=fatal vitest run --passWithNoTests",
    "test:e2e": "playwright test",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "supabase": "npx supabase@latest",
    "supabase:status": "npx supabase@latest status",
    "supabase:start": "npx supabase@latest start",
    "supabase:stop": "npx supabase@latest stop",
    "supabase:db:pull": "npx supabase@latest db pull",
    "supabase:db:push": "npx supabase@latest db push",
    "supabase:db:reset": "npx supabase@latest db reset",
    "supabase:gen:types": "cross-env-shell npx supabase@latest gen types typescript --project-id $SUPABASE_PROJECT_REF --schema public > apps/frontend/src/types/database.types.ts",
    "db:pull": "pnpm supabase:db:pull",
    "db:start": "pnpm supabase:start",
    "db:stop": "pnpm supabase:stop",
    "gen:types": "pnpm supabase:gen:types", 
    "validate:env": "node scripts/validate-env.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.53.2",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cross-env": "^7.0.3",
    "dotenv": "^17.1.0",
    "envalid": "^8.0.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "pino": "^9.7.0",
    "sonner": "^2.0.5"
  }
}
