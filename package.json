{
  "name": "ai-foundations-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.12.2+sha512.a32540185b964ee30bb4e979e405adc6af59226b438ee4cc19f9e8773667a66d302f5bfee60a39d3cac69e35e4b96e708a71dd002b7e9359c4112a1722ac323f",
  "scripts": {
    "// === RÉCUPÉRATION ===": "",
    "recovery": "bash scripts/recovery.sh",
    "cleanup": "bash scripts/cleanup.sh",
    "// === DÉVELOPPEMENT ===": "",
    "dev": "docker-compose up --build frontend",
    "dev:full": "docker-compose --profile backend up --build",
    "dev:tools": "docker-compose --profile tools up -d",
    "dev:logs": "docker-compose logs -f",
    "// === SUPABASE CLOUD ===": "",
    "db:pull": "cd apps/backend && pnpm exec supabase db pull",
    "db:push": "cd apps/backend && pnpm exec supabase db push",
    "db:diff": "cd apps/backend && pnpm exec supabase db diff",
    "db:reset": "cd apps/backend && pnpm exec supabase db reset",
    "// === TYPES ===": "",
    "gen:types": "supabase gen types typescript --project-id oqmllypaarqvabuvbqga --schema public,auth,storage > apps/frontend/src/types/database.types.ts",
    "typecheck": "pnpm exec tsc -b --pretty",
    "// === VALIDATION ===": "",
    "test:connection": "node scripts/test-supabase-connection.js",
    "validate:env": "node scripts/validate-env.js",
    "health": "curl -f http://localhost:3000 && echo '✅ Frontend OK' || echo '❌ Frontend KO'",
    "// === MAINTENANCE ===": "",
    "clean:docker": "docker system prune -af --volumes",
    "clean:deps": "find . -name node_modules -type d -exec rm -rf {} + 2>/dev/null || true",
    "reset:hard": "pnpm cleanup && pnpm recovery",
    "// === SYNCHRONISATION ===": "",
    "sync:from-cloud": "cd apps/backend && pnpm exec supabase db pull && pnpm run gen:types",
    "sync:to-cloud": "cd apps/backend && pnpm exec supabase db push"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react": "^7.37.5",
    "typescript": "^5.8.3",
    "vite": "6.3.5",
    "vite-plugin-checker": "^0.9.3"
  }
}
