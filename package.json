{
  "name": "ai-foundations-monorepo",
  "private": true,
  "packageManager": "pnpm@10.12.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel dev:frontend dev:backend",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "start": "pnpm dev:frontend",
    "build": "pnpm --filter frontend build",
    "preview": "pnpm --filter frontend preview",
    "test": "vitest run --passWithNoTests",
    "lint": "eslint . --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "db:pull": "pnpm --filter backend exec supabase db pull",
    "gen:types": "pnpm --filter backend exec supabase gen types typescript --schema public > apps/frontend/src/types/supabase.ts",
    "db:start": "pnpm --filter backend exec supabase start",
    "db:stop": "pnpm --filter backend exec supabase stop",
    "validate:env": "node scripts/validateEnv.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "@eslint/js": "^9.27.0",
    "globals": "^16.2.0",
    "eslint-plugin-react": "^7.37.5",
    "typescript": "^5.8.3",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2"
  }
}