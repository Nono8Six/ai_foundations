# ======================================
# Configuration Supabase (Obligatoire)
# ======================================
VITE_SUPABASE_URL=votre_url_supabase
VITE_SUPABASE_ANON_KEY=votre_cle_anon_supabase

SUPABASE_URL=$VITE_SUPABASE_URL
SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY


# ======================================
# Configuration de l'application
# ======================================
VITE_APP_NAME="IA Foundations"
VITE_APP_ENV=development
VITE_APP_VERSION=0.1.0
VITE_PORT=3000
PORT=3000

# ======================================
# Configuration API
# ======================================
# VITE_API_BASE_URL=https://api.votredomaine.com

# ======================================
# Paramètres de débogage
# ======================================
VITE_DEBUG=true
NODE_ENV=development

# ======================================
# Paramètres de performance
# ======================================
# Activer les outils de mesure de performance
VITE_ENABLE_PERFORMANCE_MONITORING=false

# ======================================
# Configuration CORS (si nécessaire)
# ======================================
# VITE_CORS_ORIGIN=http://localhost:3000
# VITE_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# VITE_CORS_CREDENTIALS=true

# ======================================
# Configuration des logs
# ======================================
VITE_LOG_LEVEL=debug  # debug, info, warn, error

# ======================================
# Configuration du cache
# ======================================
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600  # en secondes

# ======================================
# Configuration du thème (optionnel)
# ======================================
# VITE_THEME=light  # light, dark, system

# ======================================
# Configuration des fonctionnalités expérimentales
# ======================================
# VITE_EXPERIMENTAL_FEATURE_X=false
# VITE_EXPERIMENTAL_FEATURE_Y=false

POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=app
