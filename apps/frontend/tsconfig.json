{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": ".",

    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@frontend/*": ["./src/*"],
      "@core/*": ["./src/core/*"],
      "@shared/*": ["./src/shared/*"],
      "@features/*": ["./src/features/*"],
      "@utils/*": ["./src/shared/utils/*"],
      "@services/*": ["./src/shared/services/*"],
      "@components/*": ["./src/shared/components/*"],
      "@contexts/*": ["./src/shared/contexts/*"],
      "@ui/*": ["./src/shared/ui/*"],
      "@layouts/*": ["./src/shared/layouts/*"],
      "@hooks/*": ["./src/shared/hooks/*"],
      "@/lib/*": ["./src/shared/utils/*"],
      "@libs/*": ["../../libs/*"]
    },
    "typeRoots": ["../../node_modules/@types", "./src/types"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/types/**/*", "src/vite-env.d.ts", "../../src/env.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  // "references": [  // Nouveau : Linke les libs pour typecheck cross-package
  //   { "path": "../../libs/supabase-utils/tsconfig.json" },
  //   { "path": "../../libs/logger/tsconfig.json" },
  //   { "path": "../../libs/cms-utils/tsconfig.json" }
  // ]
}