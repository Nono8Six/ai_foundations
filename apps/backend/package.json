{
  "name": "@ai-foundations/backend",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm build && node --env-file=../../.env dist/index.js",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "// === TESTS SUPABASE ===": "",
    "test:supabase": "node --env-file=../../.env scripts/test-supabase-connection.mjs",
    "test:supabase:full": "node --env-file=../../.env scripts/test-supabase-full.js",
    "test:db": "node --env-file=../../.env scripts/test-database.js",
    "// === SUPABASE CLI ===": "",
    "db:pull": "supabase db pull",
    "db:push": "supabase db push",
    "db:diff": "supabase db diff",
    "db:reset": "supabase db reset",
    "db:status": "supabase status",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "// === DÉVELOPPEMENT ===": "",
    "lint": "eslint src/ --ext .js,.ts",
    "format": "prettier --write src/",
    "clean": "rm -rf dist/ node_modules/.cache/",
    "// === TYPES & GÉNÉRATION ===": "",
    "gen:types": "supabase gen types typescript --project-id oqmllypaarqvabuvbqa --schema public,auth,storage > src/types/database.types.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "@ai-foundations/logger": "workspace:*"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "eslint": "^8.57.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "supabase": "^1.145.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
